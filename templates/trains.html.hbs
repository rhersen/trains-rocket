<head>
    <title>Trains</title>
    <style>
        table {
            border-collapse: collapse;
            font-family: sans-serif;
        }

        th, td {
            border: 1px solid black;
            padding: 4px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<div>
    <h1>{{location_signature}}</h1>
    <table>
    <tr>
        <th>Ident</th>
        <th>To</th>
        <th>Activity</th>
        <th>Advertised</th>
        <th>Estimated</th>
        <th>Actual</th>
        {{#each trains}}
            <tr>
                <td>{{this.train_ident}}</td>
                <td>{{this.to_location}}</td>
                <td>{{this.activity_type}}</td>
                <td>{{this.advertised_time}}</td>
                <td>{{this.estimated_time}}</td>
                <td>{{this.time_at_location}}</td>
            </tr>
        {{/each}}
    </table>
</div>
</body>